@model MotoristaModel
@{
    ViewData["Title"] = "Excluir Cadastro de Motorista";
}

<div class="text-center">
    <h3>Deseja apagar o registro (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary" role="button" asp-controller="Home" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger" role="button" asp-controller="Motorista" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>